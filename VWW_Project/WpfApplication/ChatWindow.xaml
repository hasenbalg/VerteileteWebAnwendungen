<Window x:Class="WpfApplication.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="ChatWindow" Height="300" Width="300">
    <StackPanel>
        <ListView x:Name="messagesListView" Height="250">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="{Binding time}" Margin="10"/>
                        <TextBlock Text="{Binding text}"/>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="newMessagetextBox" Grid.Column="0"/>
            <Button x:Name="sendNewMessageButton" Content="Senden" Grid.Column="1" Click="sendNewMessageButton_Click"/>
        </Grid>
    </StackPanel>
</Window>
