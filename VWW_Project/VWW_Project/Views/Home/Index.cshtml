@{
    ViewBag.Title = "";
}
<h2>Kalender</h2>

<div id="calendar"></div>
<div id="myModal" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><span id="eventTitle"></span></h4>
            </div>
            <div class="modal-body">
                <p id="pDetails"></p>
            </div>
            <div class="modal-footer">
                <button id="btnDelete" class="btn btn-default">Löschen
                </button>
                <button id="btnEdit" class="btn btn-default" style="margin-right:5px;">Bearbeiten
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Schließen</button>
            </div>
        </div>
    </div>
</div>

<div id="myModalSave" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Speichern</h4>
            </div>
            <div class="modal-body">
                <form class="col-md-12 form-horizontal">
                    <input type="hidden" id="hdEventId" value="0" />
                    <input type="hidden" id="hdUserId" value="0" />
                    <div class="form-group">
                        <label>Thema</label>
                        <input type="text" id="txtSubject" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Beginn</label>
                        <div class="input-group date" id="dtp1">
                            <input type="text" id="txtStart" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label><input type="checkbox" id="chkIsFullDay" checked="checked" />Ganzer Tag</label>
                        </div>
                    </div>
                    <div class="form-group" id="divEnd" style="display: none">
                        <label>Ende</label>
                        <div class="input-group date" id="dtp2">
                            <input type="text" id="txtEnd" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Beschreibung</label>
                        <textarea id="txtDescription" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Farbe</label>
                        <select id="ddThemeColor" class="form-control">
                            <option value="">Default</option>
                            <option value="red">Rot</option>
                            <option value="blue">Blau</option>
                            <option value="green">Grün</option>
                            <option value="black">Schwarz</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label><input type="checkbox" id="chkIsShared" />Sichtbar für andere Nutzer</label>
                        </div>
                    </div>
                    <button type="button" id="btnSave" class="btn btn-success">Speichern</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Schließen</button>
                </form>
            </div>
        </div>
    </div>
</div>
<link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.print.css" rel="stylesheet" media="print" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>

    <script>
        $(document).ready(function () {
            var isAuthenticated = @User.Identity.IsAuthenticated.ToString().ToLower();
            var events = [];
            var selectedEvent = null;
            FetchEventsAndRenderCalendar();
            function FetchEventsAndRenderCalendar() {
                events = [];
                $.ajax({
                    type: "GET",
                    url: "/home/GetEvents",
                    success: function (data) {
                        $.each(data, function (i, v) {
                            events.push({
                                id: v.Id,
                                title: v.Subject,
                                description: v.Description,
                                start: moment(v.Start),
                                end: v.End != null ? moment(v.End) : null,
                                color: v.ThemeColor,
                                isFullDay: v.IsFullDay,
                                isShared: v.IsShared,
                                userId: v.UserId
                            })
                        })

                        GenerateCalendar(events, isAuthenticated);
                    },
                    error: function (error) {
                        alert("failed");
                    }
                })
            }
            function GenerateCalendar(events, isAuthenticated) {
                $('#calendar').fullCalendar('destroy');
                $('#calendar').fullCalendar({
                    contentHeight: 400,
                    defaultDate: new Date(),
                    timeFormat: 'HH:mm',
                    header: {
                        left: 'today',
                        center: 'prev,title,next',
                        right: 'month,basicWeek,basicDay,agenda'
                    },
                    eventLimit: true,
                    eventColor: '#378006',
                    events: events,
                    eventClick: function (calEvent, jsEvent, view) {
                        if(isAuthenticated){
                            selectedEvent = calEvent;
                            $('#myModal #eventTitle').text(calEvent.title);
                            var $description = $('<div/>');
                            $description.append($('<p/>').html('<b>Start:<b/><br>' + calEvent.start.format("DD/MM/YYYY HH:mm")));
                            if (calEvent.end != null) {
                                $description.append($('<p/>').html('<b>Ende:<b/><br>' + calEvent.end.format("DD/MM/YYYY HH:mm")));
                            }
                            $description.append($('<p/>').html('<b><b/><br>' + calEvent.description));
                            $('#myModal #pDetails').empty().html($description);
                            $('#myModal').modal();
                        }

                    },
                    selectable: true,
                    select: function (start, end) {
                        if(isAuthenticated){
                            selectedEvent = {
                                eventId: 0,
                                title: '',
                                description: '',
                                start: start,
                                end: end,
                                isFullDay: false,
                                color: '',
                                isShared: false
                            };
                            openAddEditForm();
                            $('#calendar').fullCalendar('unselect');
                        }

                    },
                    editable: true,
                    eventDrop: function (event) {
                        if(isAuthenticated){
                            var data = {
                                Id: event.eventId,
                                Subject: event.title,
                                Start: event.start.format('DD/MM/YYYY HH:mm A'),
                                End: event.end != null ? event.end.format('DD/MM/YYYY HH:mm A') : null,
                                Description: event.description,
                                ThemeColor: event.color,
                                IsFullDay: event.isFullDay,
                                IsShared: event.isShared,
                                UserId: event.userId
                            };
                            SaveEvent(data);
                        }

                    }
                })
            }

            $('#btnEdit').click(function () {
                openAddEditForm();
            })

            $('#btnDelete').click(function () {
                if (selectedEvent != null && confirm('Wirklich löschen?')) {
                    $.ajax({
                        type: "POST",
                        url: "/home/DeleteEvent",
                        data: { 'id': selectedEvent.id },
                        success: function (data) {
                            if (data.status) {
                                FetchEventsAndRenderCalendar();
                                $('#myModal').modal('hide');
                            }
                        },
                        error: function () {
                            alert('failed');
                        }
                    })
                }
            })
            $('#dtp1').datetimepicker({
                format: 'DD/MM/YYYY HH:mm A'
            });
            $('#dtp2').datetimepicker({
                format: 'DD/MM/YYYY HH:mm A'
            });
            $('#chkIsFullDay').change(function () {
                if ($(this).is(':checked')) {
                    $('#divEnd').hide();
                }
                else {
                    $('#divEnd').show();
                }
            })

            function openAddEditForm() {
                if (selectedEvent != null) {
                    $('#hdEventId').val(selectedEvent.id);
                    $('#txtSubject').val(selectedEvent.title);
                    $('#txtStart').val(selectedEvent.start.format('DD/MM/YYYY HH:mm A'));
                    $('#chkIsFullDay').prop("checked", selectedEvent.isFullDay || false);
                    $('#chkIsFullDay').change();
                    $('#txtEnd').val(selectedEvent.end != null ? selectedEvent.end.format('DD/MM/YYYY HH:mm A') : '');
                    $('#txtDescription').val(selectedEvent.description);
                    $('#ddThemeColor').val(selectedEvent.color);
                    $('#chkIsShared').val(selectedEvent.isShared);
                    $('#hdUserId').val(selectedEvent.userId);
                }
                $('#myModal').modal('hide');
                $('#myModalSave').modal();
            }

            $('#btnSave').click(function () {
                console.log("CLicked");
                // Validation
                if ($('#txtSubject').val().trim() == "") {
                    alert('Thema wird benötigt');
                    return;
                }
                if ($('#txtStart').val().trim() == "") {
                    alert('Beginn wird benötigt');
                    return;
                }
                if ($('#chkIsFullDay').is(':checked') == false && $('#txtEnd').val().trim() == "") {
                    alert('Ende wird benötigt');
                    return;
                }
                else {
                    var startDate = moment($('#txtStart').val(), "DD/MM/YYYY HH:mm A").toDate();
                    var endDate = moment($('#txtEnd').val(), "DD/MM/YYYY HH:mm A").toDate();
                    if (startDate > endDate) {
                        alert('Ungültiges Ende');
                        return;
                    }
                }
                var data = {
                    Id: $('#hdEventId').val(),
                    Subject: $('#txtSubject').val().trim(),
                    Start: $('#txtStart').val().trim(),
                    End: $('#chkIsFullDay').is(':checked') ? null : $('#txtEnd').val().trim(),
                    Description: $('#txtDescription').val(),
                    ThemeColor: $('#ddThemeColor').val(),
                    IsFullDay: $('#chkIsFullDay').is(':checked'),
                    IsShared: $('#chkIsShared').is(':checked'),
                    UserId: $('#hdUserId').val()

                }
                SaveEvent(data);
                // function for submit data on the server
            })
            function SaveEvent(data) {
                $.ajax({
                    type: "POST",
                    url: "/home/SaveEvent",
                    data: data,
                    success: function (data) {
                        if (data.status) {
                            FetchEventsAndRenderCalendar();
                            $('#myModalSave').modal('hide');
                        }
                    },
                    error: function () {
                        alert('failed');
                    }
                })
            }
        })
    </script>
}